# RAG Chatbot API Configuration

# API Configuration
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/embedding-001

# Vector Store Configuration
VECTOR_STORE_TYPE=zilliz
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
FAISS_INDEX_PATH=./data/faiss_index

# MongoDB Atlas Configuration (for user data, chat history, etc.)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DATABASE=rag_chatbot
MONGODB_COLLECTION=documents

# Admin User Setup (optional - for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password
ADMIN_USERNAME=admin

# Zilliz Cloud Configuration (for vector storage)
ZILLIZ_URI=https://your-cluster.zillizcloud.com
ZILLIZ_TOKEN=your_zilliz_token_here

# File Upload Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.wav,.mp3,.m4a

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=4000
TOP_K_RETRIEVAL=5

# Speech Configuration
WHISPER_MODEL=base
TEMP_AUDIO_DIR=./data/temp 